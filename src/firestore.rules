rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users can read their own profile, admins can read any profile
    match /users/{userId} {
      allow read: if request.auth != null && (request.auth.uid == userId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Admin');
      allow create: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Overtime Records
    match /overtimeRecords/{recordId} {
      // Authenticated users can create their own records
      allow create: if request.auth != null;
      
      // Users can read/write their own records, admins can read/write all records
      // This rule is for individual document access. List queries are handled by adjusting the client-side query.
      allow read, update: if request.auth != null && (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Admin' || request.auth.uid == resource.data.employeeId);
      
      // Only admins can delete records
      allow delete: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Admin';
    }
  }
}
