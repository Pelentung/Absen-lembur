
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users can read their own profile, admins can read any profile
    match /users/{userId} {
      allow read: if request.auth != null && (request.auth.uid == userId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Admin');
      allow create: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Overtime Records
    match /overtimeRecords/{recordId} {
      // Any authenticated user can read. The query in the app will filter what they can see.
      allow read: if request.auth != null;

      // Authenticated users can create their own records
      allow create: if request.auth != null;
      
      // Only admins can update or delete records.
      allow update, delete: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Admin';
    }
  }
}
