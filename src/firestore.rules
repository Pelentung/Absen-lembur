
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users: Admins can manage all users. Users can read/write their own profile.
    match /users/{userId} {
      allow read: if request.auth != null && (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Admin' || request.auth.uid == userId);
      allow write: if request.auth != null && (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Admin' || request.auth.uid == userId);
      allow delete: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Admin';
      allow create: if request.auth != null; // Anyone can create their own user doc on signup.
    }

    // Overtime Records
    match /overtimeRecords/{recordId} {
      // Admins can get any record. Users can get their own.
      allow get: if request.auth != null && 
                  (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Admin' || 
                   resource.data.employeeId == request.auth.uid);
      
      // Admins can list all records. Users can query their own records based on employeeId.
      allow list: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Admin';

      // Authenticated users can create their own records
      allow create: if request.auth != null && request.resource.data.employeeId == request.auth.uid;
      
      // Users can update their own records for check-out, admins can update any record for verification.
      allow update: if request.auth != null && 
                    (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Admin' ||
                     (request.auth.uid == resource.data.employeeId));

      // Only admins can delete records
      allow delete: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Admin';
    }
  }
}
