
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users can read their own profile, admins can read any profile
    match /users/{userId} {
      allow read: if request.auth != null && (request.auth.uid == userId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Admin');
      allow create: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Overtime Records
    match /overtimeRecords/{recordId} {
      // Admins can list all records. Users can query their own records.
      allow list: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Admin';
      
      // Users can get their own records, admins can get any record.
      allow get: if request.auth != null && (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Admin' || resource.data.employeeId == request.auth.uid);

      // Authenticated users can create their own records
      allow create: if request.auth != null && request.resource.data.employeeId == request.auth.uid;
      
      // Users can update their own records for check-out, admins can update any record for verification.
      allow update: if request.auth != null && 
                    (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Admin' ||
                     (request.auth.uid == resource.data.employeeId && request.resource.data.status == 'Checked Out'));

      // Only admins can delete records
      allow delete: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Admin';
    }
  }
}
